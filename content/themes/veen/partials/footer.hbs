<!-- start: #footer -->
<footer id="footer" class="">

  <div class="widgets grid-container grid-large">
    <div class="row">

      <!-- start: .recent-articles -->
      <div class="widget widget-recent-articles grid-33 tablet-grid-50">
        <h3 class="title medium bordered">{{t "Latest Articles" }}</h3>
        {{#get "posts" limit="2" as |recent-footer| }}
          {{#foreach recent-footer}}
            <article class="{{post_class}} item {{^if feature_image}}no-thumb{{/if}}">
              {{#if feature_image}}
                <a href="{{url}}" class="thumb hover-effect grid-20 tablet-grid-20 mobile-grid-20 grid-parent">
                                    <span class="fullimage cover lazy" data-src="{{img_url feature_image size="widget_thumb"}}"></span>
                                </a>
              {{/if}}
              <div class="info">
                <h4 class="title usmall"><a href="{{url}}">{{title}}</a></h4>
                <div class="meta">
                  <time class="small" datetime="{{date format='YYYY-MM-DD'}}"><i class="remixicon remixicon-time-line"></i>{{date}}</time>
                </div>
              </div>
              <div class="clear"></div>
            </article>
          {{/foreach}}
        {{/get}}
      </div>
      <!-- end: .recent-articles -->

      <!-- start: .widget-tag-cloud -->
      <div class="widget widget-tag-cloud grid-33 tablet-grid-50">
        <h3 class="widget-title title medium bordered">{{t "Topic" }}</h3>
        {{#get "tags" limit="15"}}
          {{!-- {{tags separator=""}} --}}
          {{#foreach tags}}
            <a href="{{url}}" class="ctag ctag-{{slug}}" data-id="ctag-{{slug}}">{{name}}</a>
          {{/foreach}}
        {{/get}}
      </div>
      <!-- end: .widget-tag-cloud -->

      <!-- start: .widget-menu -->
      <div class="widget widget-menu grid-33 tablet-grid-50">
        <h3 class="widget-title title medium bordered">{{t "Menu" }}</h3>
        {{!-- {{navigation}} --}}
        <ul>
          <li><a href="https://www.greenteaormatcha.com/">Home</a></li>
          <li><a href="https://www.greenteaormatcha.com/author/yuyu/">Author</a></li>
        </ul>
      </div>
      <!-- end: .widget-tag-cloud -->

      <div class="clear"></div>

    </div>

  </div>

  <div class="epcl-border"></div>

  <p class="published">{{t "Published with" }} <a href="https://ghost.org/" target="_blank">Ghost</a></p>

  <div class="clear"></div>

  <a href="javascript:void(0)" id="back-to-top" class="button"><i class="fa fa-angle-up"></i></a>

</footer>
<!-- end: #footer -->