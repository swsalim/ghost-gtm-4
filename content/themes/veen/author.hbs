{{!< default}}

<main id="archives" class="main grid-container">

    <div class="row">

        {{#author}}
  
            <!-- start: .author -->
            <section id="author" class="author section grid-container grid-small {{#if profile_image}} with-avatar{{else}} no-avatar{{/if}}">
                
                <div class="flex">
                    <div class="avatar">
                        {{#if profile_image}}
                            <a href="{{url}}" class="translate-effect thumb"><span class="fullimage cover" style="background-image: url( {{profile_image}} );"></span></a>
                        {{/if}}
                    </div>
                    <div class="info">
                        <h4 class="title small author-name"><a href="{{url}}">{{name}}</a></h4>
                        <p class="position"><span class="dot small"></span> {{plural ../pagination.total empty=(t "0  Articles") singular=(t "1 Article") plural=(t "% Articles")}}</p>
                        <div class="social">
                            {{#if twitter}}
                                <a href="{{twitter_url}}" class="twitter tooltip" title="{{ t 'Follow me on Twitter' }} " target="_blank"><i class="fa fa-twitter"></i></a>
                            {{/if}}
                            {{#if facebook}}
                                <a href="{{facebook_url}}" class="facebook tooltip" title="{{ t 'Follow me on Facebook' }}" target="_blank"><i class="fa fa-facebook"></i></a>
                            {{/if}}
                            {{#if website}}
                                <a href="{{website}}" class="website tooltip" title="{{ t 'Website' }}: {{website}}" target="_blank"><i class="remixicon remixicon-earth-line"></i></a>
                            {{/if}}
                            
                        </div>
                        <p>{{bio}}</p>
                        <div class="clear"></div>
                    </div>
                </div>
                <div class="clear"></div>
                
            </section>
            <!-- end: .author -->
            <div class="epcl-border small"></div>
      
        {{/author}}
        
        <div class="clear"></div>

        <!-- start: .content-wrapper -->
        <div class="content-wrapper" data-aos="fade-up">
    
                
            <div class="left-content grid-70 grid-parent np-mobile">
                <!-- start: .articles -->
                <div class="articles">
                            
                    {{#foreach posts}}
                        {{> loop/default-article}}                 
                    {{/foreach}}
                    
                </div>
                <!-- end: .articles -->
                
                {{pagination}}
            </div>

            {{> sidebar }}
        
        </div>
        <!-- end: .content-wrapper -->

    </div>


</main>